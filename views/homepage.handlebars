<main>
    <h1>Posts</h1>
    <div class="card text-center">
        {{#each posts}}
        <div class="card-header">
            <a href="/post/{{id}}" >{{title}}</a>
        </div>
        <div class="card-body">
            <p>Created on: {{format_date}} </p>
        </div>
        {{/each}}
    </div>
</main>